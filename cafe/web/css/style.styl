    background url("../images/Background/MainBackground.jpg") center no-repeat
    height auto
    overflow hidden
/*drinks-section */
.drinks-item 
    width 250px
    height 250px
    background $gradient
    border solid 1px $gardient
    margin 20px 25px
    float left
    position relative
    border solid 1px #996633 
    
.item-name
    width auto
    padding 10px 12px
    position absolute
    top -20px 
    left 60px
    auto-text(#996633)
    border-radius 15px;
    border solid 1px black
