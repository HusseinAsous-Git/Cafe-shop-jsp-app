.category
    margin 10px 0
.category-header
    font-size 18px
    padding 10px 20px
    margin 15px auto
    text-align center
    width 150px
    auto-text(#996633)
    border-radius 10px
    border solid 1px #996633

.category-item
    background-color white
    border  solid 1px black 
    width 150px
    margin 5px 20px  
    padding 7px 15px
    text-align center
    border-radius 5px 
    font-size 1.2rem
    position relative
    &:before
        content ''
        position absolute
        z-index 10
        height 30px
        width 40px
        top 3px
        right 0px
        background url("../images/arrow.png") center no-repeat
.hot:after
    content ''
    position absolute
    z-index 10
    height 30px
    width 40px
    top 1px
    right -60px
    background url("../images/hot1.png") center no-repeat 
