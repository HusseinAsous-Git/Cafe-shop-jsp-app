/*variable and function and mixin*/
$gradient = linear-gradient(top ,#ccc,#555)
auto-text(color)
    if dark(color)
        background color
        color lighten(color , 80%)
    else 
        background color
        color darken(color,80%)


/*variable and function and mixin*/ 
/*global setting*/
* 
    padding 0
    margin 0 
    box-sizing border-box
body
html 
    // background-color #ccc
    font-family Arial, Helvetica, sans-serif

.active
    display block !important

img 
    outline none
    width 100%
    height 100% 
    border none
.fl
    float left 

.fr 
    float right

.clear-fix
    content ""
    display table
    clear both

.container
    width 1250px
    height auto
    margin 0 auto
    position relative
    padding 0
a
    border none
    &:visited
    &:link
        color black
    &:hover
        opacity 30% 
    
