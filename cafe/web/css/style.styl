/*sidebar-section*/
.header
    width 100px
    padding 10px 15px
    auto-text(saturate(#996633))
    text-align center
    border-radius 5px
    margin 10px 
    font-size 1.2rem
    opacity  0.8
    transition 0.3 all ease-in-out
    &:hover
        opacity  1.0
        transition 0.3 all ease-in-out
    &:focus
        outline none
        
    
